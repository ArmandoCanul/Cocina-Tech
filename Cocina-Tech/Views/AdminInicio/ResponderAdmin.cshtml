@using System.Data;
@model DataTable
@{
    ViewBag.Title = "ResponderAdmin";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}
<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<link href="~/RecursosAdmin/Chat/Responder.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Chat/VerMensaje.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">


    <div class="mail-box">
        <aside class="sm-side">

            <div class="inbox-body">
                <a href="#myModal" data-toggle="modal" title="Compose" class="btn btn-compose">
                    MENSAJES
                </a>
                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade" style="display: none;">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                <h4 class="modal-title">MENSAJES</h4>
                            </div>
                            <div class="modal-body">
                                <form role="form" class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">To</label>
                                        <div class="col-lg-10">
                                            <input type="text" placeholder="" id="inputEmail1" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Cc / Bcc</label>
                                        <div class="col-lg-10">
                                            <input type="text" placeholder="" id="cc" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Subject</label>
                                        <div class="col-lg-10">
                                            <input type="text" placeholder="" id="inputPassword1" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Message</label>
                                        <div class="col-lg-10">
                                            <textarea rows="10" cols="30" class="form-control" id="" name=""></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <span class="btn green fileinput-button">
                                                <i class="fa fa-plus fa fa-white"></i>
                                                <span>Attachment</span>
                                                <input type="file" name="files[]" multiple="">
                                            </span>
                                            <button class="btn btn-send" type="submit">Send</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>

            <ul class="inbox-nav inbox-divider">
                <li class="active">
                    <a href="#"><i class="fa fa-inbox"></i> Inbox <span class="label label-danger pull-right"></span></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-envelope-o"></i> Sent Mail</a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-bookmark-o"></i> Important</a>
                </li>
                <li>2
                    <a href="#"><i class="fa fa-external-link"></i> Drafts <span class="label label-info pull-right">30</span></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-trash-o"></i> Trash</a>
                </li>
            </ul>

            <div class="inbox-body text-center">
                <div class="btn-group">
                    <a class="btn mini btn-primary" href="javascript:;">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
                <div class="btn-group">
                    <a class="btn mini btn-success" href="javascript:;">
                        <i class="fa fa-phone"></i>
                    </a>
                </div>
                <div class="btn-group">
                    <a class="btn mini btn-info" href="javascript:;">
                        <i class="fa fa-cog"></i>
                    </a>
                </div>
            </div>

        </aside>
        <aside class="lg-side">
            <div class="inbox-head">
                <h3>Inbox</h3>
                <form action="#" class="pull-right position">
                    <div class="input-append">
                        <input type="text" class="sr-input" placeholder="Search Mail">
                        <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>

            <div class="inbox-body">
                @foreach (DataRow row in Model.Rows)
                {
                <div class="panel panel-default">

                    <div class="panel-body message">
                
                        <div class="header">

                            <img class="avatar" src="https://bootdey.com/img/Content/avatar/avatar1.png">


                            <div class="from">
                                <label>REMITENTE</label>
                                <span>@row["Remitente"]</span>
                                
                            </div>
                            <div class="date">
                            <label>FECHA DE ENVIO</label>
                            <span class="fa fa-paper-clip"></span><b>@row["Fecha"]</b></div>

                            <div class="menu"></div>

                        </div>
@using (Ajax.BeginForm("ResponderAdmin1", "AdminInicio", new AjaxOptions() { HttpMethod = "POST" }))
{
                        <div class="content">
                           <label name="Asunto">ASUNTO:</label>
                            <p>
                                 @row["Asunto"]
                            </p>
                            <label>MENSAJE</label>
                            <blockquote>
                               @row["Mensaje"]
                            </blockquote>
                        </div>
                       <input type="text" name="idenvia2" value="@row["IDusuairoenvia"]" style="display:none">
                    <input type="text" name="Asunto" value="@row["Asunto"]" style="display:none">


                        <form method="post" action="">

                            <div class="form-group">
                                <label>RESPONDER</label>
                                <textarea class="form-control" id="message" name="Mensaje" rows="12" placeholder="Click here to reply" ></textarea>

                            </div>

                            <div class="form-group">

                                <button tabindex="3" type="submit" class="btn btn-success">Enviar</button>

                            </div>

                        </form>
}
                    </div>

                </div>	
                }

            </div>

</aside>
</div>
</div>
                