@using System.Data;
@model DataTable
@{
    ViewBag.Title = "imboxUsuario";
    Layout = "~/Views/PaginasMaestras/UsuarioLogeado/UsuarioMaster.cshtml";
}

<link rel="stylesheet" type="text/css" href="css/style.css">
<link href="~/RecursosAdmin/Miperfil/css/style.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/fonts/css/font-awesome.min.css" rel="stylesheet" />
<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<link href="~/RecursosAdmin/Chat/Responder.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Chat/VerMensaje.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/css/Redimensionar.css" rel="stylesheet" />

<div class="container" id="main" style="margin: 84px ">
    <div class="row">


        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div id="sidebar">
                <div class="sosmed">
                    <div class="text-center">
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Facebook"></i></a>
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Twitter"></i></a>
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Google Plus"></i></a>
                    </div>
                </div>
                <div class="user">
                    <div class="text-center">
                        @if (Session["Foto"] != null)
                        {
                            string Fot = "data:image/jpeg;base64," + Convert.ToBase64String((byte[])Session["Foto"]);
                            <img class="avatar border-gray max-width: 98%;" src="@Fot" alt="..." />

                        }
                        else
                        {
                            <img src="~/RecursosAdmin/Miperfil/img/YO.jpg" class="img-circle">

                        }

                        @*<input id="File1" type="file" class="btn btn-primary" />*@


                    </div>
                    <div class="user-head">
                        <h1>@Session["Nombre_usu"]</h1>
                        <div class="hr-center"></div>
                    </div>
                </div>
                <div class="link-me">
                    <div class="text-center">
                        <a href="#"><i class="fa fa-shopping-cart" data-toggle="tooltip" data-placement="top" title="Ingresar Tarjeta"></i></a>
                        <a href="~/Usuario/imboxUsuario"><i class="fa fa-envelope-open" data-toggle="tooltip" data-placement="top" title="Imbox">@ViewBag.Count</i></a>
                        <a href="~/Usuario/ActualizarUsu"><i class="fa fa-cog" data-toggle="tooltip" data-placement="top" title="Configurar Mi Usuario"></i></a>
                        <a href="~/Usuario/Factura"><i class="fa fa-file" data-toggle="tooltip" data-placement="top" title="Obtener mi factura"></i></a>
                    </div>
                    <div class="hr-center"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
            <div id="content" style="border-top: 68px solid #ffb100">
                <!-- start:navbar -->
                <nav class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="navbar-header page-scroll">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                </nav>
                <aside class="lg-side">
                    <div class="inbox-head">
                        <h3>Inbox</h3>
                        <form action="#" class="pull-right position">
                            <div class="input-append">
                                <input type="text" class="sr-input" placeholder="Search Mail">
                                <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                    <div class="inbox-body">
                        <div class="mail-option">
                            <div class="chk-all">
                                <input type="checkbox" class="mail-checkbox mail-group-checkbox">
                                <div class="btn-group">
                                    <a data-toggle="dropdown" href="#" class="btn mini all" aria-expanded="false">
                                        All
                                        <i class="fa fa-angle-down "></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"> None</a></li>
                                        <li><a href="#"> Read</a></li>
                                        <li><a href="#"> Unread</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="btn-group">
                                <a data-original-title="Refresh" data-placement="top" data-toggle="dropdown" href="#" class="btn mini tooltips" aria-expanded="false">
                                    <i class="fa fa-refresh"></i>
                                </a>
                            </div>
                            <div class="btn-group hidden-phone">
                                <a data-toggle="dropdown" href="#" class="btn mini blue" aria-expanded="false">
                                    More
                                    <i class="fa fa-angle-down "></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                    <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                                </ul>
                            </div>
                            <div class="btn-group">
                                <a data-toggle="dropdown" href="#" class="btn mini blue" aria-expanded="false">
                                    Move to
                                    <i class="fa fa-angle-down "></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                    <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                                </ul>
                            </div>

                            <ul class="unstyled inbox-pagination">
                                <li><span>1-50 of 234</span></li>
                                <li>
                                    <a class="np-btn" href="#"><i class="fa fa-angle-left  pagination-left"></i></a>
                                </li>
                                <li>
                                    <a class="np-btn" href="#"><i class="fa fa-angle-right pagination-right"></i></a>
                                </li>
                            </ul>
                        </div>
                        @foreach (DataRow row in Model.Rows)
                        {

                            <table class="table table-inbox table-hover" href="~/AdminInicio/ResponderAdmin">
                                <tbody>



                                    <tr class="">
                                        <td class="inbox-small-cells">
                                            <input type="checkbox" class="mail-checkbox">
                                        </td>
                                        <td class="inbox-small-cells"><i class="fa fa-star"></i></td>
                                        <td class="view-message dont-show">@row["Remitente"]</td>
                                        <td class="view-message" onclick="location.href='@($"/Usuario/ResponderUsuario/{@row["ID"]}")'">@row["Asunto"]</td>
                                        <td class="view-message inbox-small-cells"></td>
                                        <td class="view-message text-right">@row["Fecha"]</td>
                                    </tr>

                                </tbody>
                            </table>
                        }
                    </div>

                </aside>

                <script src="~/RecursosAdmin/Miperfil/js/jquery-1.11.1.min.js"></script>
                <script src="~/RecursosAdmin/Miperfil/js/marinka.js"></script>
                <script src="~/RecursosAdmin/Miperfil/js/portfolio.jquery.js"></script>
                <script src="~/RecursosAdmin/Miperfil/js/jquery.easing.min.js"></script>
                <script src="~/RecursosAdmin/Miperfil/js/scrolling-nav.js"></script>
                <script src="~/RecursosAdmin/Miperfil/js/jquery.scrollUp.js"></script>
