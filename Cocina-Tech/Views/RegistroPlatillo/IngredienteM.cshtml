@using System.Data;
@model DataTable


@{
    ViewBag.Title = "IngredienteM";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}
@using (Ajax.BeginForm("AgregarMedida", "RegistroPlatillo", new AjaxOptions() { HttpMethod = "POST" }))
{
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Ingresar Medida</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Tipo De Medida</label>
                                        <input type="text" class="form-control" placeholder="Medida" name="Medida">
                                    </div>
                                </div>
                                <div class="col-md-5" style="padding-left:0px">
                                    <div class="form-group" style="margin-top:24px">
                                        <button type="submit" class="btn btn-info btn-fill">Guardar</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">

                                            <div class="panel-body panel-body-table">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered table-striped table-actions">
                                                        <thead>
                                                            <tr>
                                                                <th width="50">ID</th>
                                                                <th>MEDIDA</th>
                                                                <th width="100">ESTADO</th>
                                                                <th width="100">ACCION</th>
                                                            </tr>
                                                        </thead>
                                                        @foreach (DataRow row in Model.Rows)
                                                        {
                                                            <tbody>


                                                                <tr id="trow_1">
                                                                    <td class="text-center">@row["ID"]</td>
                                                                    <td><strong>@row["MEDIDA"]</strong></td>
                                                                    <td><span class="label label-success">@(row["ESTADO"].ToString()=="True" ? "Disponible" : "No Disponible")</span></td>


                                                                    <td>
                                                                        <button class="btn btn-default btn-rounded btn-sm">
                                                                            <span class="fa fa-pencil">
                                                                            </span>
                                                                        </button>


                                                                    </td>

                                                            </tbody>
                                                        }
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                                    <div class="clearfix"></div>
</form>
                    </div>
                </div>
            </div>
            

            </div>
</div>
</div>
}   
