@using System.Data
@model DataTable

@{
    ViewBag.Title = "RegistroPlatillo";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}

<div class="content"><div class="card">
    <div class="container-fluid">
        <div class="row">

            @using (Html.BeginForm("AgregarPlatillo", "RegistroPlatillo", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="col-md-12">

                    <div class="header">
                        <h4 class="title">Platillos</h4>
                    </div>
                    <div class="content">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Nombre Del Platillo</label>
                                    <input type="text" class="form-control" placeholder="Platillo" name="Nombre"style="margin-left:-9px">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tiempo de Preparacion</label>
                                    <input type="text" class="form-control" name="TiempoPreparacion">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @{
                                        Html.RenderAction("ParcialPlatillo", "RegistroPlatillo");
                                    }
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Precio</label>
                                    <input type="text" class="form-control" placeholder="Precio" name="Precio">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Recetario</label>
                                    <input type="file" name="algo" />
                                </div>
                            </div>
                        </div>
                        <div class="row">



                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Portada</label>
                                    <input id="File1" type="file" name="Portada" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Galeria</label>
                                    <input id="File1" type="file" name="[]Galeria" />
                                </div>
                            </div>
                        </div>
                        <div></div>
                        <div class="row">
                            <div class="col-md-2">
                                <input id="Button1" type="submit" value="Agregar Platillo" class="btn btn-info btn-fill pull-left" style="margin-left:-6px"/>
                            </div>
                        </div>
                    </div>





                </div>
            }

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">

                    <div class="panel-body panel-body-table">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-actions">
                                <thead>
                                    <tr>
                                        <th width="50">ID</th>
                                        <th>NOMBRE Platillo</th>
                                        <th width="100">TIEMPO DE PREPARACION</th>
                                        <th width="100">FECHA DE CREACION</th>
                                        <th width="100">ESTADO</th>
                                        <th width="100">PRECIO</th>
                                        <th width="100">ACCION</th>
                                    </tr>
                                </thead>
                                @foreach (DataRow row in Model.Rows)
                                {

                                    <tbody>


                                        <tr id="trow_1">
                                            <td class="text-center">@row["ID"]</td>
                                            <td><strong>@row["NOMBRE"]</strong></td>
                                            <td>@row["TIEMPODEPREPARACION"]</td>
                                            <td><strong>@row["FECHACREACIONPLATILLO"]</strong></td>
                                            <td><span class="label label-success">@(row["ESTADO"].ToString()=="True" ? "Disponible" : "No Disponible")</span></td>
                                            <td><strong>@row["PRECIO"]</strong></td>
                                            <td>
                                                <button class="btn btn-default btn-rounded btn-sm"><span class="fa fa-pencil"></span></button>
                                                <button id="@row["ID"]" type="button" class="btn btn-block btn-success" onclick="AbrirModal()">
                                                    Agregar Ingrediente
                                                    <span class="fa fa-times">
                                                        @*@Html.ActionLink("Eliminar", "Eliminarcat", "RegistroPlatillo", new { ID = row["ID"] })*@
                                                    </span>
                                                </button>

                                            </td>

                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>
    </div>
                                            


                                            
   <script>
        //$('#myModal').on('shown.bs.modal', function () {
        //    $('#myInput').focus()
       //})
       function AbrirModal() {
           $('#Modalxd').modal('show')
       }
</script>                                

