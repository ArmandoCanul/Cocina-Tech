@using System.Data;
@model DataTable

@{
    ViewBag.Title = "RegistroUsuarios";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="header">
                        <h4 class="title">REGISTRO VOTACION</h4>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm("AgregarVotacion", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Nombre</label>
                                            <input type="text" class="form-control" placeholder="Nombre" name="Nombre">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Tiempo de Preparacion</label>
                                            <input type="text" class="form-control" placeholder="Tiempo De Preparacion" name="TiempoPreparacion">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Precio</label>
                                        <input type="text" class="form-control" placeholder="Precio" name="Precio">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @{
                                            Html.RenderAction("ParcialPlatillo", "RegistroPlatillo");
                                        }
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Descripcion de Platillo</label>
                                            <input type="text" class="form-control" placeholder="Descripcion" name="Descrip">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Foto De Portada</label>
                                            <input id="File1" type="file" name="Portada" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <button type="submit" class="btn btn-info btn-fill pull-right">Guardar</button>
                                </div>
                                <div class="clearfix"></div>
                            </form>
                                            }
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">

                                <div class="panel-body panel-body-table">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped table-actions">
                                            <thead>
                                                <tr>

                                                    <th>NOMBRE</th>
                                                    <th width="100">FECHA DE CREACION</th>
                                                    <th width="100">DESCRIPCION</th>
                                                    <th width="100">TIEMPO DE PREPARACION</th>
                                                    <th width="100">ESTADO</th>
                                                    <th width="100">NUMERO DE VOTOS</th>
                                                    <th width="100">ACCION</th>

                                                </tr>
                                            </thead>
                                            @foreach (DataRow row in Model.Rows)
                                            {
                                                <tbody>


                                                    <tr>

                                                        <td><strong>@row["NOMBRE"]</strong></td>
                                                        <td><strong>@row["FECHACREACION"]</strong></td>
                                                        <td><strong>@row["DESCRIPCION"]</strong></td>
                                                        <td><strong>@row["TIEMPODEPREPARACION"]</strong></td>
                                                        <td><span class="label label-success">@row["ESTADO"]</span></td>
                                                        <td><strong>@row["NumeroVotos"]</strong></td>

                                                        <td>

                                                            @*<button class="btn btn-default btn-rounded btn-sm" href="~/Administrador/VotacionActualizar">
                                                                <a href="~/Administrador/VotacionActualizar"></a></abr><span class="fa fa-pencil" href="~/Administrador/VotacionActualizar"></span></button>*@


                                                            <span class="fa fa-times">
                                                                @*@Html.ActionLink("Eliminar", "Eliminarcat", "RegistroPlatillo", new { ID = row["ID"] })*@
                                                            </span>

                                                        </td>

                                                </tbody>}


                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>

    </div>
</div>