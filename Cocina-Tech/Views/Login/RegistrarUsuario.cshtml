@model Cocina_Tech.BO.UsuarioBO
@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/PaginaMaestra.cshtml";
}


    <link href="~/RecursosAdmin/RegistroPro/css/demo.css" rel="stylesheet" />
    <link href="~/RecursosAdmin/RegistroPro/css/sky-forms.css" rel="stylesheet" />



<div class="bg-cyan">
    <div class="body body-s">

        <form action="#" class="sky-form">
@using (Html.BeginForm("Registro", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
            <header>Registration form</header>

            <fieldset>
                <section>
                    <label class="input">
                        <i class="icon-append icon-user"></i>
                        <input type="text" placeholder="Usuario" name="Usuario">
                        <b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
                    </label>
                </section>

                <section>
                    <label class="input">
                        <i class="icon-append icon-envelope-alt"></i>
                        <input type="text" placeholder="Email address" name="Correo">
                        <b class="tooltip tooltip-bottom-right">Needed to verify your account</b>
                    </label>
                </section>

                <section>
                    <label class="input">
                        <i class="icon-append icon-lock"></i>
                        <input type="password" placeholder="Password" name="Contraseña">
                        <b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
                    </label>
                </section>

                <section>
                    <label class="input">
                        <i class="icon-append icon-lock"></i>
                        <input type="text" placeholder="Nombre" name="Nombre">
                        <b class="tooltip tooltip-bottom-right">Only latin characters and numbers</b>
                    </label>
                </section>
            </fieldset>

            
                <div class="row">
                    <section class="col col-6">
                        <label class="input">
                            <input type="text" placeholder="Apellidos" name="Apellido">
                        </label>
                    </section>
                    <section class="col col-6">
                        <label class="input">
                            <input type="date" placeholder="Last name" name="FechaNac">
                        </label>
                    </section>
                    <section>
                        <label>Foto De Perfil</label>
                        <input id="File1" type="file" name="Fotografia" />
                    </section>
                    <section class="col col-6">
                        <label class="input">
                            <input type="text" placeholder="Telefono" name="Telefono">
                        </label>
                    </section>
                </div>

              <fieldset>

                  <section class="col col-6">
                      <label class="input">
                          <input type="text" placeholder="Telefono" name="Telefono">
                      </label>
                  </section>
              </fieldset>

               
            
           
            <footer>
                <button type="submit" class="button">Guardar</button>
            </footer>
}
        </form>

    </div>
</div>


