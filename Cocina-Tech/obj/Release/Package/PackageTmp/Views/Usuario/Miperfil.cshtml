@using System.Data;
@model DataTable

@{
    ViewBag.Title = "Miperfil";
    Layout = "~/Views/PaginasMaestras/UsuarioLogeado/UsuarioMaster.cshtml";
}

<link rel="stylesheet" type="text/css" href="css/style.css">
<link href="~/RecursosAdmin/Miperfil/css/style.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/fonts/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/css/Redimensionar.css" rel="stylesheet" />
 @*@using (Ajax.BeginForm("Miperfil", "Usuario", new AjaxOptions() { HttpMethod = "POST" }))*@
 
    

<div class="container" id="main" style="width:100%">    
    <div class="row">

     
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div id="sidebar">
               
                <div class="user">
                    <div class="text-center">
                        @if (Session["Foto"] != null)
                        {
                            string Fot = "data:image/jpeg;base64," + Convert.ToBase64String((byte[])Session["Foto"]);
                            <img class="avatar border-gray max-width: 98%;" src="@Fot" alt="..." />

                        }
                        else
                        {
                            <img src="~/RecursosAdmin/Miperfil/img/555555.jpg" class="img-circle">

                        }
                       
                        @*<input id="File1" type="file" class="btn btn-primary" />*@
                      
                     
                    </div>
                    <div class="user-head">
                        <h1>@Session["Nombre_usu"]</h1>
                        <div class="hr-center"></div>
                    </div>
                </div>
                <div class="link-me">

                    <!--div class="text-center">
        <a href="#"><i class="fa fa-shopping-cart" data-toggle="tooltip" data-placement="top" title="Ingresar Tarjeta"></i></a>
        <a href="~/Usuario/imboxUsuario"><i class="fa fa-envelope-open" data-toggle="tooltip" data-placement="top" title="Imbox">@ViewBag.Count</i></a>
        <a href="~/Usuario/ActualizarUsu"><i class="fa fa-cog" data-toggle="tooltip" data-placement="top" title="Configurar Mi Usuario"></i></a>
        <a href="~/Usuario/Factura"><i class="fa fa-file" data-toggle="tooltip" data-placement="top" title="Obtener mi factura"></i></a>
    </!--div>-->
                    <div class="hr-center"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
            <div id="content"> 
                <!-- start:navbar -->
               
                <!-- end:navbar -->
                <!-- start:main content -->
@foreach (DataRow row in Model.Rows)
{
                <div class="main-content">
                    <ul class="timeline">
                        <!-- start:profile -->
                        <li id="id-profile">
                            <div class="timeline-badge default"><i class="fa fa-user"></i></div>
                            <h1 class="timeline-head">PERFIL</h1>
                        </li>
                        <li id="profile">
                            <div class="timeline-badge primary"></div>
                            <div class="timeline-panel">
                                <h1>Hola Bienvenido <strong>@Session["Nombre"]</strong></h1>
                                <div class="hr-left"></div>

                              
                            </div>
                        </li>

              <li id="personal-info">
                            <div class="timeline-badge primary"></div>
                            <div class="timeline-panel">

                        
                                <h1>Información Personal</h1>
                                <div class="hr-left"></div>

                                <div class="col-md-6">
                                    <label>Nombre</label>
                                    <input type="text"class="form-control"placeholder="@row["NOMBRE"]" name="Nombre" value="@row["NOMBRE"]">
                                </div>
                            
                                <div class="col-md-6">
                                    <label>Apellido</label>
                                    <input type="text" class="form-control" placeholder="@row["APELLIDOS"]" name="Nombre" value="@row["APELLIDOS"]">
                                </div>
                                <div class="col-md-6">
                                    <label>Correo</label>
                                    <input type="text" class="form-control" placeholder="@row["CORREO"]" name="Nombre" value="@row["CORREO"]">
                                </div>
                                <div class="col-md-6">
                                    <label>Fecha de Nacimiento</label>
                                    <input type="text" class="form-control" placeholder="@row["FECHANACIMIENTO"]" name="Nombre" value="@row["FECHANACIMIENTO"]">
                                </div>
                                <div class="col-md-6">
                                    <label>Telefono</label>
                                    <input type="text" class="form-control" placeholder="@row["TELEFONO"]" name="Nombre" value="@row["TELEFONO"]">
                                </div>
                                
                            </div>
                        </li>
                        <!-- end:profile -->



                    </ul>
                </div>
}
                <!-- end:main content -->
            </div>
        </div>
    </div>
    </div>
  


<script src="~/RecursosAdmin/Miperfil/js/jquery-1.11.1.min.js"></script>
<script src="~/RecursosAdmin/Miperfil/js/marinka.js"></script>
<script src="~/RecursosAdmin/Miperfil/js/portfolio.jquery.js"></script>
<script src="~/RecursosAdmin/Miperfil/js/jquery.easing.min.js"></script>
<script src="~/RecursosAdmin/Miperfil/js/scrolling-nav.js"></script>
<script src="~/RecursosAdmin/Miperfil/js/jquery.scrollUp.js"></script>