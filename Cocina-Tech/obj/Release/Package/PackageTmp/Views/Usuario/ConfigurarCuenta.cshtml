@using System.Data;
@using Cocina_Tech.BO;
@model UsuarioBO

@{
    ViewBag.Title = "ConfigurarCuenta";
    Layout = "~/Views/PaginasMaestras/UsuarioLogeado/UsuarioMaster.cshtml";
}


<link rel="stylesheet" type="text/css" href="css/style.css">
<link href="~/RecursosAdmin/Miperfil/css/style.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/fonts/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/RecursosAdmin/Miperfil/css/Redimensionar.css" rel="stylesheet" />

@using (Html.BeginForm("ConfigurarCuenta", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{



<div class="container" id="main" style="margin: 84px ">
    <div class="row">


        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div id="sidebar">
                <div class="sosmed">
                    <div class="text-center">
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Facebook"></i></a>
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Twitter"></i></a>
                        <a href="#"><i data-toggle="tooltip" data-placement="top" title="Google Plus"></i></a>
                    </div>
                </div>
                <div class="user">
                    <div class="text-center">
                        @if (Session["Foto"] != null)
                        {
                            string Fot = "data:image/jpeg;base64," + Convert.ToBase64String((byte[])Session["Foto"]);
                            <img class="avatar border-gray max-width: 98%;" src="@Fot" alt="..." />

                        }
                        else
                        {
                            <img src="~/RecursosAdmin/Miperfil/img/user.jpg" class="img-circle">

                        }
                        @*<input id="File1" type="file" class="btn btn-primary" />*@


                    </div>
                    <div class="user-head">
                        <h1>@Session["Nombre_usu"]</h1>
                        <div class="hr-center"></div>
                    </div>
                </div>
                <div class="link-me">
                    <div class="text-center">
                        <a href="#"><i class="fa fa-credit-card" data-toggle="tooltip" data-placement="top" title="Ingresar Tarjeta"></i></a>
                        <a href="~/Usuario/imboxUsuario"><i class="fa fa-envelope-open" data-toggle="tooltip" data-placement="top" title="Imbox"></i></a>
                        <a href="#"><i class="fa fa-cog" data-toggle="tooltip" data-placement="top" title="Configurar Mi Usuario"></i></a>
                    </div>
                    <div class="hr-center"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
            <div id="content" style="border-top: 68px solid #16a085">
                <!-- start:navbar -->
                <nav class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="navbar-header page-scroll">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                </nav>

                <div class="main-content">
                    <ul class="timeline">
                        <!-- start:profile -->
                        <li id="id-profile">
                            <div class="timeline-badge default"><i class="fa fa-user"></i></div>
                            <h1 class="timeline-head">PERFIL</h1>
                        </li>
                        <li id="profile">
                            <div class="timeline-badge primary"></div>
                            <div class="timeline-panel">
                                <h1>Hola Bienvenido <strong>@Session["Nombre"]</strong></h1>
                                <div class="hr-left"></div>


                            </div>
                        </li>

                        <li id="personal-info">
                            <div class="timeline-badge primary"></div>
                            <div class="timeline-panel">

                                 <div class="content">
    <div class="container-fluid">
        
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Editar Mi Perfil</h4>
                    </div>
                    <div class="content">


                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input type="text" class="form-control" placeholder="Contraseña" name="Contraseña">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Usuario</label>
                                <input type="text" class="form-control" placeholder="Usuario" name="Usuario">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Correo</label>
                                <input type="email" class="form-control" placeholder="Email" name="correo">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Nombres</label>
                                    <input type="text" class="form-control" placeholder="Nombres" name="Nombre">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Apellidos</label>
                                    <input type="text" class="form-control" placeholder="Apellidos" name="Apellidos">
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Fecha De Nacimiento</label>
                                <input type="date" class="form-control" id="FechaNaci" name="FechaNaci">
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Telefono</label>
                                <input type="text" class="form-control" placeholder="Telefono" name="Telefono">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Foto De Perfil</label>
                                    <input id="File1" type="file" name="Fotografia" />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                        <div class="col-md-8">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="@Session["Usuario"]" name="ID" style="display:none">
                            </div>
                          

                        
                        <button type="submit" class="btn btn-info btn-fill pull-right">Guardar</button>
                        
                    </div>
                    </div>
                </div>
            
        </div>
                                     </div>
                                </div>
                        </li>
                        
                        <!-- end:profile -->
                        


                    </ul>
                </div>
                      
                    
                </div>
            </div>
</div>
</div>
}