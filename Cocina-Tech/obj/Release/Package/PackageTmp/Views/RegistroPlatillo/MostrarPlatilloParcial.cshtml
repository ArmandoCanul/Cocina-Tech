@using System.Data;
@model DataTable


<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="col-md-11">
            <div class="card">
                <div class="header">
                    <h4 class="title">Mostrar Platillos</h4>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre del Platillo</th>
                            <th>Tiempo de Preparación</th>
                            <th>Fecha de Creación</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
            {
                            <tr id="fila_@row["ID"]">
                                <td>@row["ID"]</td>
                                <td>@row["NOMBRE"]</td>
                                <td>@row["TIEMPODEPREPARACION"]</td>
                                <td>@row["FECHACREACION"]</td>
                                @*<td>@Html.ActionLink("Editar", "ActualizarEstado", "Estado", new { id = @row["ID"], @class = "btn btn-info btn-fill pull-right" }, null)</td>
                                <td>@Html.ActionLink("Eliminar", "EliminarEdo", new { id = @row["ID"], @class = "btn btn-info btn-fill pull-right" }, null)</td>*@

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
