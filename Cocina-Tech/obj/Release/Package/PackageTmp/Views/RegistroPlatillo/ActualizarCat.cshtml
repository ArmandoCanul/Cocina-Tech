@using System.Data;
@using Cocina_Tech.BO
@Model DataTable;
@{
    ViewBag.Title = "ActualizarCat";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Platillos</h4>
                    </div>


                    <div class="content">

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Nombre De la Categoria de Platillo</label>
                                    <input type="text" class="form-control" placeholder="Platillo" name="Nombre">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>ID</label>
                                    <input type="text" class="form-control" placeholder="Platillo" name="Nombre">
                                </div>
                            </div>


                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Estado</label>
                                    
                                </div>
                            </div>

                        </div>

                        <input id="Button1" type="submit" value="Agregar Platillo" class="primary-color" />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-default">

                                    <div class="panel-body panel-body-table">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped table-actions">
                                                <thead>
                                                    <tr>
                                                        <th width="50">ID</th>
                                                        <th>NOMBRE CATEGORIA</th>
                                                        <th width="100">ESTADO</th>
                                                        <th width="100">FECHA</th>
                                                        <th width="100">actions</th>
                                                    </tr>
                                                </thead>
                                                @foreach (DataRow row in Model.Rows)
                                                {
                                                    <tbody>


                                                        <tr id="trow_1">
                                                            <td class="text-center">@row["ID"]</td>
                                                            <td><strong>@row["NOMBRE"]</strong></td>
                                                            <td><span class="label label-success">@row["ESTADO"]</span></td>
                                                            <td>@row["FECHACREACION"]</td>
                                                            <td>
                                                                <button class="btn btn-default btn-rounded btn-sm"><span class="fa fa-pencil"></span></button>
                                                                <button class="btn btn-danger btn-rounded btn-sm" onClick="delete_row('trow_1');"><span class="fa fa-times"></span></button>
                                                            </td>

                                                    </tbody>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>
