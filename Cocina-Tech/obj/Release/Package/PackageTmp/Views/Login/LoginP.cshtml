
@{
    Layout = null;
}

<!DOCTYPE html>

<link rel="apple-touch-icon" sizes="114x114" href="/bootstrap/img/apple-touch-icon-114x114.png">
<link rel="apple-touch-icon" sizes="72x72" href="/bootstrap/img/apple-touch-icon-72x72.png">
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginP</title>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <script src="http://unpkg.com/sweetalert/dist/sweealert.min.js"></script>


    <link href="~/RecursosAdmin/Login/css/style.css" rel="stylesheet" />
    <link href="~/RecursosAdmin/css/mistilo.css" rel="stylesheet" />
</head>
<body id="fondo1" >
    

    @using (Ajax.BeginForm("Loguearse", "Login", new AjaxOptions() { HttpMethod = "POST" }))
    {
            @Html.AntiForgeryToken();
        <div class="form">
            <div id="login">
                <h1>Bienvenido Cocina Tech</h1>



                <div class="field-wrap">
                    <label>
                        Usuario<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="Usuario" />
                </div>
                <a href="~/Views/Principal/InicioPrincipal.cshtml"></a>

                <div class="field-wrap">
                    <label>
                        Contraseña<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" name="Contraseña" />
                </div>
               

                <button class="button button-block">Iniciar Sesion</button>

            </div>
           </div>

    }
      @if (ViewBag.id == null)
      {
          <script type="text/javascript">
              window.onload = function () {
                  swal("Logueado","asdaw","success")
              }
          </script>
      }
   

    <script async="" src="//www.google-analytics.com/analytics.js"></script>
            <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
            <script src="~/RecursosAdmin/Login/js/index.js"></script>
    </body>
</html>
