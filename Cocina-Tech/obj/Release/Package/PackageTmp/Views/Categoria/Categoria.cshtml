@model Cocina_Tech.BO.CategoriaBO

@{
    ViewBag.Title = "Categoria";
    Layout = "~/Views/Administrador/Administrador.cshtml";
}

@using (Ajax.BeginForm("Agregar", "Categoria", new AjaxOptions() { HttpMethod = "POST" }))
{

    @Html.AntiForgeryToken();

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Categoria</h4>
                        </div>
                        <div class="content">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Nombre De La Categoria</label>
                                        <input type="text" class="form-control" placeholder="Platillo" name="Nombre">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Fecha de Creacion</label>
                                        <input type="date" class="form-control" placeholder="Username" name="Fecha">
                                    </div>
                                </div>
                            </div>
                            <input id="Button1" type="submit" value="button" class="button button-block" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
